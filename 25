<div class="container">
    <h2>Реєстрація</h2>

    <div class="form-group">
        <label>Тип користувача</label>
        <select id="userType">
            <option value="private">Приватний користувач</option>
            <option value="org">Організація</option>
        </select>
        <div class="tooltip">Оберіть тип вашого облікового запису</div>
    </div>

    <div class="form-group">
        <label>Назва акаунта</label>
        <input type="text" id="login">
        <div class="tooltip">Введіть унікальний логін</div>
    </div>

    <div class="form-group">
        <label>Пароль</label>
        <input type="password" id="password">
        <div class="tooltip">Пароль має бути не менше 6 символів</div>
    </div>

    <!-- Поля для приватних користувачів -->
    <div id="privateFields">
        <div class="form-group">
            <label>Ім’я</label>
            <input type="text" id="firstName">
            <div class="tooltip">Введіть ваше ім’я</div>
        </div>

        <div class="form-group">
            <label>Прізвище</label>
            <input type="text" id="lastName">
            <div class="tooltip">Введіть ваше прізвище</div>
        </div>
    </div>

    <!-- Поля для організацій -->
    <div id="orgFields" class="hidden">
        <div class="form-group">
            <label>Назва організації</label>
            <input type="text" id="orgName">
            <div class="tooltip">Введіть юридичну назву організації</div>
        </div>

        <div class="form-group">
            <label>Адреса</label>
            <input type="text" id="orgAddress">
            <div class="tooltip">Введіть адресу організації</div>
        </div>
    </div>

    <button onclick="register()">Зареєструватися</button>
</div>


<script>
    const userTypeSelect = document.getElementById("userType");
    const privateFields = document.getElementById("privateFields");
    const orgFields = document.getElementById("orgFields");

    userTypeSelect.addEventListener("change", function() {
        if (this.value === "private") {
            privateFields.classList.remove("hidden");
            orgFields.classList.add("hidden");
        } else {
            privateFields.classList.add("hidden");
            orgFields.classList.remove("hidden");
        }
    });

    function register() {
        alert("Реєстрація успішна!");
    }
</script>

