using System;
using System.Threading;

class Program
{
    static void Main()
    {
        int[] numbers = new int[20];
        Random rand = new Random();

        // Заповнення масиву випадковими числами
        for (int i = 0; i < numbers.Length; i++)
            numbers[i] = rand.Next(1, 13);

        Thread[] threads = new Thread[numbers.Length];

        // Створення та запуск потоків
        for (int i = 0; i < numbers.Length; i++)
        {
            int num = numbers[i]; // локальна копія, щоб не втратити значення
            threads[i] = new Thread(() => CalculateFactorial(num));
            threads[i].Start();
        }

        // Очікуємо завершення всіх потоків
        foreach (Thread t in threads)
            t.Join();

        Console.WriteLine("Розрахунок закінчено.");
    }

    static void CalculateFactorial(int num)
    {
        long result = 1;
        for (int i = 1; i <= num; i++)
            result *= i;

        Console.WriteLine($"факторіал числа: {num}! = {result}");
    }
}
