using System;

public class ArrayWorker<T>
{
    private T[] array;

    public ArrayWorker(T[] array)
    {
        this.array = array;
    }

    // Пошук індексу першого входження елемента
    public int FindIndex(T item)
    {
        for (int i = 0; i < array.Length; i++)
        {
            if (Equals(array[i], item))
                return i;
        }
        return -1;
    }

    // Реверс масиву
    public void Reverse()
    {
        Array.Reverse(array);
    }

    // Метод для виведення масиву
    public void Print()
    {
        foreach (var element in array)
            Console.Write(element + " ");
        Console.WriteLine();
    }
}

